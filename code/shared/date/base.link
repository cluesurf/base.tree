  stem roll
    stem and
      call is-greater-than
        loan day
        loan k-day-zero-in-julian-day
      call is-less-than
        call subtract
          loan day
          loan k-day-zero-in-julian-day
        mark 40177
      hook true
        save jsimple
          call add
            call subtract
              loan day
              loan k-day-zero-in-julian-day
            mark 731
        save y, mark 1968
        save after-1968
          call shift-right
            call multiply
              loan jsimple
              mark 22967
            mark 25
        save y
          call shift-left
            loan after-1968
            mark 2
        save jsimple
          call multiply
            mark 1461
            loan after-1968
        save four-year-cycle, loan four-year-cycle-table[jsimple]
        back seed
          make day-triplet
            call add
              loan y
              call shift-right
                loan four-year-cycle
                loan k-year-shift
            call shift-right
              call bitwise-and
                loan four-year-cycle
                loan k-month-mask
              loan k-month-shift
            call bitwise-and
              loan four-year-cycle
              loan k-day-mask
  save jalpha
    call floor
      call divide
        call subtract
          loan day
          mark 1867216.25
        mark 36524.25
  save jb
    call add
      call subtract
        call add
          call add
            loan day
            mark 1
          loan jalpha
        call floor
          call multiply
            mark 0.25
            loan jalpha
      mark 1524
  save jc
    call floor
      call add
        mark 6680
        call divide
          call subtract
            call subtract
              loan jb
              mark 2439870
            mark 122.1
          mark 365.25
  save jd
    call floor
      call add
        call multiply
          mark 365
          loan jc
        call multiply
          mark 0.25
          loan jc
  save je
    call floor
      call divide
        call subtract
          loan jb
          loan jd
        mark 30.6001
  save m
    call subtract
      loan je
      mark 1
  stem test
    call is-greater-than
      loan m
      mark 12
    hook true
      save m, mark 13
  save y
    call subtract
      loan jc
      mark 4715
  stem test
    call is-greater-than
      loan m
      mark 2
    hook true
      save y, call decrement, loan y
      save m, call decrement, loan m
  save d
