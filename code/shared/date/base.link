function msFromTime(time) {
  return Modulo(time, msPerSecond);
}


// ECMA 262 - 5.2
function Modulo(value, remainder) {
  var mod = value % remainder;
  // Guard against returning -0.
  if (mod == 0) return 0;
  return mod >= 0 ? mod : mod + remainder;
}

task convert-from-julian-day-to-gregorian-day
  take day
  stem roll
    stem and
      call is-greater-than
        read day
        read k-day-zero-in-julian-day
      call is-less-than
        call subtract
          read day
          read k-day-zero-in-julian-day
        mark 40177
      hook true
        save jsimple
          call add
            call subtract
              read day
              read k-day-zero-in-julian-day
            mark 731
        save y, mark 1968
        save after-1968
          call shift-right
            call multiply
              read jsimple
              mark 22967
            mark 25
        save y
          call shift-left
            read after-1968
            mark 2
        save jsimple
          call multiply
            mark 1461
            read after-1968
        save four-year-cycle, read four-year-cycle-table[jsimple]
        back seed
          make day-triplet
            call add
              read y
              call shift-right
                read four-year-cycle
                read k-year-shift
            call shift-right
              call bitwise-and
                read four-year-cycle
                read k-month-mask
              read k-month-shift
            call bitwise-and
              read four-year-cycle
              read k-day-mask
  save jalpha
    call floor
      call divide
        call subtract
          read day
          mark 1867216.25
        mark 36524.25
  save jb
    call add
      call subtract
        call add
          call add
            read day
            mark 1
          read jalpha
        call floor
          call multiply
            mark 0.25
            read jalpha
      mark 1524
  save jc
    call floor
      call add
        mark 6680
        call divide
          call subtract
            call subtract
              read jb
              mark 2439870
            mark 122.1
          mark 365.25
  save jd
    call floor
      call add
        call multiply
          mark 365
          read jc
        call multiply
          mark 0.25
          read jc
  save je
    call floor
      call divide
        call subtract
          read jb
          read jd
        mark 30.6001
  save m
    call subtract
      read je
      mark 1
  stem test
    call is-greater-than
      read m
      mark 12
    hook true
      save m, mark 13
  save y
    call subtract
      read jc
      mark 4715
  stem test
    call is-greater-than
      read m
      mark 2
    hook true
      save y, call decrement, read y
      save m, call decrement, read m
  save d
