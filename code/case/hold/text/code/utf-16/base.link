
load @textsurf/bolt/code/list
  take form list

load @textsurf/bolt/code/mark/16
  take form mark-16

load @textsurf/bolt/code/text/code/utf-16
  take form text-utf-16

task allocate
  take size
  cast text, like text-utf-16

form text-utf-16
  take list, list mark-16
    hide true

  task get-size, like mark

  task transform-to-upper-case
  task transform-to-lower-case
  task transform-to-snake-case
  task transform-to-kebab-case

  task trim-whitespace
  task trim-whitespace-start
  task trim-whitespace-end

  task split

  task replace

